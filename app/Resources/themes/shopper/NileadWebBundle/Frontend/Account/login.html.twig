{% extends "NileadWebBundle:Frontend:layout.html.twig" %}


{# TITLE #}
{% block title %}Login{{ parent() }}{% endblock %}


{# HEAD #}
{% block head %}
    <meta name="description" content="Default Description">
    <meta name="keywords" content="Magento, Varien, E-commerce">

    {{ parent() }}
{% endblock %}


{% block body_class %}customer-account-login{% endblock %}


{# FOOTER #}
{% block footer %}
    {% include 'NileadWebBundle:Components/Login:footer.html.twig' %}
{% endblock %}


{# SCRIPTS #}
{% block scripts %}
    {{ parent() }}

    <script src="{{ asset('themes/shopper/js/pages/login.js') }}"></script>
{% endblock %}


{# CONTENT #}
{% block content %}
    <div class="main-container col1-layout">
        <div class="main row clearfix">
            <div class="col-main">
                <div class="account-login">
                    <div class="block block-login">
                        <div class="block-slider">
                            <ul class="slides">
                                <li>
                                    <div class="block-title">
                                        <strong><span>Sign In</span></strong>
                                    </div>
                                    <div class="block-content">
                                        <form id="login-form" action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                                            <ul class="form-list">
                                                <li>
                                                    {% if error is defined %}
                                                        <p style="color: #ff0000">{{ error|trans({}, 'FOSUserBundle') }}</p>
                                                    {% endif %}
                                                </li>
                                                <li>
                                                    <label for="username"
                                                           class="required">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>

                                                    <div class="input-box">
                                                        <input type="text" id="username" name="_username"
                                                               value="{{ last_username }}"
                                                               class="input-text required-entry"/>
                                                    </div>
                                                </li>
                                                <li>
                                                    <label for="password"
                                                           class="required">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>

                                                    <div class="input-box">
                                                        <input type="password" id="password" name="_password"
                                                               class="input-text required-entry validate-password"/>
                                                    </div>
                                                </li>

                                                <li>
                                                    <div class="input-box">
                                                        <input type="checkbox" id="remember_me" name="_remember_me"
                                                               value="on"/>
                                                        {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                                    </div>
                                                </li>
                                            </ul>
                                            <button type="submit" class="button" title="Login" name="send" id="send2">
                                                <span><span>Login</span></span></button>
                                            <a href="{#{ path('nilead.change_password') }#}" class="forgot-password"
                                               id="forgot-password">Forgot Your Password?</a>
                                        </form>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="new-users">
                            <button type="button" title="Register" class="button invert"
                                    onclick="window.location='{{ path('nilead.user_registration_register') }}';">
                                <span><span>Register</span></span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
