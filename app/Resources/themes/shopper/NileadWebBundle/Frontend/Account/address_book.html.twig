{% extends "NileadWebBundle:Frontend/Account:index.html.twig" %}


{# TITLE #}
{% block title %}Address Book{% endblock %}


{# HEAD #}
{% block head %}
    <meta name="description" content="Default Description">
    <meta name="keywords" content="Magento, Varien, E-commerce">

    {{ parent() }}
{% endblock %}

{# BODY CLASS#}
{% block body_class %}  customer-address-index{% endblock %}

{# CONTENT #}
{% block content %}
    <div class="main-container col2-left-layout">
        <div class="page-title-bg" style="height: 90px;"></div>
        <div class="main row">
            <div class="col-main">
                <div class="my-account">
                    <div class="page-title title-buttons">
                        <h1>Address Book</h1>
                        <button onclick="window.location='http://shopper.queldorei.com/index.php/customer/address/new/';" class="button" title="Add New Address" type="button"><span><span>Add New Address</span></span></button>
                    </div>
                    <div class="col2-set addresses-list">
                        <div class="col-1 addresses-primary">
                            {#<h2>Default Addresses</h2>#}
                            <ol>
                                {% for address in addresses %}
                                    <li class="item">
                                        <h3>Default Billing Address</h3>
                                        <address>
                                            test nguyen<br>

                                            test<br>


                                            {{ address.getContactMechanism.getCity }}, Florida, 70000<br>
                                            United States<br>
                                            T: 56464646465

                                        </address>
                                        <p>
                                            <a href="{{ path("nilead.frontend.account.edit_address", { 'id': address.getContactMechanism.id }) }}">Change
                                                Billing Address</a></p>
                                    </li>
                                {% endfor %}
                            </ol>
                        </div>
                        <div class="col-2 addresses-additional">
                            {#<h2>Additional Address Entries</h2>#}
                            {#<ol>#}
                            {#<li class="item empty">#}
                            {#&#123;&#35;<p>You have no additional address entries in your address book.</p>&#35;&#125;#}
                            {#</li>#}
                            {#</ol>#}
                        </div>
                    </div>
                    <div class="buttons-set">
                        <p class="back-link"><a href="http://shopper.queldorei.com/index.php/customer/account/">
                            <small>Â«</small>
                            Back</a></p>
                    </div>
                    <script type="text/javascript">
                        //&lt;![CDATA[
                        function deleteAddress(addressId) {
                            if (confirm('Are you sure you want to delete this address?')) {
                                window.location = 'http://shopper.queldorei.com/index.php/customer/address/delete/id/' + addressId;
                            }
                            return false;
                        }
                        //]]&gt;
                    </script>
                </div>
            </div>
            {% include 'NileadWebBundle:Frontend/Account:menu_left.html.twig' %}
        </div>
    </div>
{% endblock %}