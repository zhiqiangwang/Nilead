{% macro success(text) %}
<div class="alert alert-success">
    <h4 class="alert-heading">{{ 'Success'|trans }}</h4>
    {{ text }}
</div>
{% endmacro %}

{% macro info(text) %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'Infomation'|trans }}</h4>
    {{ text }}
</div>
{% endmacro %}

{% macro error(text) %}
<div class="alert alert-error">
    <h4 class="alert-heading">{{ 'Error'|trans }}</h4>
    {{ text }}
</div>
{% endmacro %}

{% macro warning(text) %}
<div class="alert alert-warning">
    <h4 class="alert-heading">{{ 'Warning'|trans }}</h4>
    {{ text }}
</div>
{% endmacro %}

{% macro alert(text, type) %}
<div class="alert alert-{{ type }}">
    <h4 class="alert-heading">{{ type|trans|capitalize }}</h4>
    {{ text }}
</div>
{% endmacro %}