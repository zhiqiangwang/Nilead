{% extends "NileadWebBundle:Frontend:layout_product_info.html.twig" %}

{% block title %}Checkout{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block scripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="row-fluid">
    <aside class="span3">
        <h4>Aside</h4>
    </aside>

    <section class="span9 checkout">
        <h2>One Step Secure Checkout</h2>

        <div class="row-fluid steps">
            <h3 class="span4">STEP 1: SHIPPING ADDRESS</h3>
            <h3 class="span4">STEP 2: BILLING ADDRESS</h3>
            <h3 class="span4">STEP 3: CONFIRMATION</h3>
        </div>

        <div class="row-fluid">
            <article class="span4 step">
                <div class="row-fluid">
                    <div class="control-group">
                        <label class="control-label" for="shipping_address">Shipping Address</label>
                        <div class="controls">
                            <select id="shipping_address" name="shipping_address" class="span11">
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="control-group span6">
                        <label class="control-label" for="shipping_address">First Name</label>
                        <div class="controls">
                            <input type="text" id="first_name" name="first_name" class="span10">
                        </div>
                    </div>

                    <div class="control-group span6">
                        <label class="control-label" for="shipping_address">First Name</label>
                        <div class="controls">
                            <input type="text" id="first_name" name="first_name" class="span10">
                        </div>
                    </div>
                </div>
            </article>

            <article class="span4 step">
            </article>

            <article class="span4 step">
            </article>
        </div>
    </section>
</div>

<style>
.checkout {
    border: 1px solid #d4d4d4;
    padding: 0 20px;
}

.checkout h2 {
    background: #efefef;
    border-bottom: 1px solid #cfcfcf;
    font-size: 18px;
    line-height: 36px;
    padding-left: 20px;
    margin: 0 -20px;
}

.checkout .steps {
    position: relative;
    background: #3d3d3d;
    padding: 0 20px;
    margin: 10px -20px 0;
    z-index: 1;
}

.checkout .steps h3 {
    color: #fff;
    font-size: 13px;
    font-weight: normal;
    margin-top: 0;
    margin-bottom: 0;
}

.checkout article {
    border-right: 1px solid #ccc;
    margin-top: -50px;
    padding-top: 70px;
}

.checkout article:last-child {
    border-right: none;
}
</style>
{% endblock %}